<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken %>" method="POST" enctype="multipart/form-data">
  <p>
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= danceform.title %>" required>
  </p>

  <div id="image-upload-control">
    <p>
      <label for="image">Image</label>
      <input type="file" id="image" name="image" accept="image/png , image/jpg" <% if (imageRequired) { %>required<% } %>>
    </p>

    <img src="" alt="Selected image.">
  </div>
  

  <p>
    <label for="instructor">Course Instructor</label>
    <input type="text" id="instructor" name="instructor" value="<%= danceform.instructor %>" required>
  </p>

  <p>
    <label for="fees">Fees</label>
    <input type="number" id="fees" name="fees" value="<%= danceform.fees %>" min="0.01" step="0.01" required>
  </p>

  <p>
    <label for="description">Description</label>
    <textarea id="description" name="description" rows="7" required><%= danceform.description %></textarea>
  </p>

  <p>
    <button type="reset" class="btn btn-alt">Reset</button>
    <button class="btn">Save</button>
  </p>
</form>